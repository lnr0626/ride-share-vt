        android:text="Display all drivers giving rides on this screen"
        android:textSize="20dp" />

    <ListView
        android:id="@id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </ListView>

</RelativeLayout>